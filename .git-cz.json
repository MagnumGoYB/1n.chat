{
  "disableEmoji": false,
  "format": "{emoji}{type}{scope}: {subject}",
  "list": [
    "feat",
    "fix",
    "docs",
    "ci",
    "style",
    "refactor",
    "release",
    "perf",
    "test",
    "chore"
  ],
  "maxMessageLength": 64,
  "minMessageLength": 3,
  "questions": ["type", "scope", "subject", "body", "breaking", "issues"],
  "scopes": [
    "components",
    "hooks",
    "utils",
    "styles",
    "docs",
    "tests",
    "config",
    "deps",
    "build"
  ],
  "types": {
    "chore": {
      "description": "其他类型的更改",
      "emoji": "🚧",
      "value": "chore"
    },
    "ci": {
      "description": "CI 相关的更改",
      "emoji": "👷",
      "value": "ci"
    },
    "docs": {
      "description": "仅文档更改",
      "emoji": "📝",
      "value": "docs"
    },
    "feat": {
      "description": "新功能或特性",
      "emoji": "✨",
      "value": "feat"
    },
    "fix": {
      "description": "修复 BUG",
      "emoji": "🐛",
      "value": "fix"
    },
    "perf": {
      "description": "性能优化",
      "emoji": "⚡️",
      "value": "perf"
    },
    "refactor": {
      "description": "重构代码",
      "emoji": "♻️",
      "value": "refactor"
    },
    "release": {
      "description": "发布新版本",
      "emoji": "🔖",
      "value": "release"
    },
    "style": {
      "description": "UI 样式相关的更改",
      "emoji": "🎨",
      "value": "style"
    },
    "test": {
      "description": "添加测试或修复测试",
      "emoji": "🧪",
      "value": "test"
    }
  }
}
